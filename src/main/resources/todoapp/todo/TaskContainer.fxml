<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="taskContainer" prefHeight="95.0" prefWidth="1048.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todoapp.todo.TaskContainerController">
    <Label fx:id="taskLabel" alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="96.0" prefWidth="821.0" text="Description">
      <font>
         <Font size="16.0" />
      </font>
      <padding>
         <Insets bottom="3.0" left="10.0" right="10.0" top="3.0" />
      </padding>
   </Label>
   <VBox prefHeight="95.0" prefWidth="227.0">
      <children>
         <Label fx:id="tasktime" nodeOrientation="LEFT_TO_RIGHT" prefHeight="27.0" prefWidth="233.0" text="created at" textFill="#4a5f96" />
         <HBox prefHeight="70.0" prefWidth="227.0">
            <children>
                <CheckBox fx:id="completedCheckbox" onAction="#onMarkCompleted" prefHeight="17.0" prefWidth="94.0" text="Completed">
                    <HBox.margin>
                        <Insets top="32.0" />
                    </HBox.margin>
                </CheckBox>
                <CheckBox fx:id="importantCheckbox" onAction="#onMarkImportant" prefHeight="17.0" prefWidth="77.0" text="Important">
                    <HBox.margin>
                        <Insets top="32.0" />
                    </HBox.margin>
                </CheckBox>
                <Button fx:id="deleteButton" onAction="#onDeleteClicked" onMouseEntered="#onHoverEffect" onMouseExited="#onHoverExited" text="Delete">
                    <HBox.margin>
                        <Insets top="30.0" />
                    </HBox.margin>
                </Button>
            </children>
         </HBox>
      </children>
   </VBox>
</HBox>
